<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.votingsystem.AdminController">
    <children>
        <Label text="Candidate Management" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <TableView fx:id="candidatesTable" prefWidth="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="100" />
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="partyColumn" text="Party" prefWidth="150" />
            </columns>
        </TableView>
        <HBox spacing="10.0" alignment="CENTER">
            <children>
                <TextField fx:id="idField" promptText="ID" />
                <TextField fx:id="nameField" promptText="Name" />
                <TextField fx:id="partyField" promptText="Party" />
                <Button fx:id="addButton" text="Add Candidate" onAction="#addCandidate" />
            </children>
        </HBox>
        <Button fx:id="backButton" text="Back" onAction="#goBack" />
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox> 