<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.votingsystem.VotingController">
    <children>
        <Label text="Cast Your Vote" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <ComboBox fx:id="candidateComboBox" promptText="Select a candidate" />
        <Button fx:id="voteButton" text="Vote" onAction="#handleVote" style="-fx-pref-width: 120px;" />
        <Label fx:id="statusLabel" textFill="red" />
        <Button fx:id="backButton" text="Back" onAction="#goBack" />
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox> 