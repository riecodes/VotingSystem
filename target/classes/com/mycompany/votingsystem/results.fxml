<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.votingsystem.ResultsController">
    <children>
        <Label text="Election Results" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
        <TableView fx:id="resultsTable" prefWidth="400">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150" />
                <TableColumn fx:id="partyColumn" text="Party" prefWidth="150" />
                <TableColumn fx:id="votesColumn" text="Votes" prefWidth="100" />
            </columns>
        </TableView>
        <Button fx:id="refreshButton" text="Refresh" onAction="#refreshResults" />
        <Button fx:id="backButton" text="Back" onAction="#goBack" />
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox> 